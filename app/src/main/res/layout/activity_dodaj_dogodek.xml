<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dodaj_dogodek"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alent.admin.ActivityDodajDogodek">


    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:id="@+id/textView10"
        android:layout_marginBottom="2dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textSize="20sp"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:text="SHRANI ODLOČITEV"
        android:layout_width="wrap_content"
        android:id="@+id/idShraniOdlocitev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:onClick="PostDataToFile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idLokacija"
        android:layout_above="@+id/idDodajIzv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Lokacija:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:layout_above="@+id/idLokacija"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idLokal"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Naslov lokala oz. prizorišča:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/Text2"
        android:layout_above="@+id/idLokal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Cena dogodka (vstopnina)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idCena"
        android:textColor="@android:color/black"
        android:layout_above="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idNaziv"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idCena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Naziv dogodka:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:layout_above="@+id/idNaziv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_above="@+id/Text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/idUraPricetka"
        android:layout_alignRight="@+id/idDan"
        android:layout_alignEnd="@+id/idDan"
        android:textAlignment="center" />

    <Button
        android:text="DODAJ IZVAJALCE IN SKLADBE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idDodajIzv"
        android:onClick="DodajIzvajalce"
        android:layout_above="@+id/idShraniOdlocitev"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/idDan"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_width="60dp"
        android:textAlignment="center" />

    <TextView
        android:text="Datum pričetka:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/black"
        android:layout_above="@+id/idDan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idMesec"
        android:layout_width="60dp"
        android:layout_below="@+id/textView4"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text"
        android:textAlignment="center" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idLeto"
        android:layout_above="@+id/text"
        android:layout_toRightOf="@+id/text"
        android:layout_toEndOf="@+id/text"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/idMesec"
        android:layout_alignStart="@+id/idMesec"
        android:id="@+id/idMinutaPricetka"
        android:layout_alignRight="@+id/idMesec"
        android:layout_alignEnd="@+id/idMesec"
        android:textAlignment="center" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/textView7"
        android:layout_toLeftOf="@+id/idMinutaPricetka"
        android:layout_toEndOf="@+id/idUraPricetka"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/idUraPricetka"
        android:textSize="20sp" />

    <TextView
        android:text="Ura pričetka dogodka:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textColor="@android:color/black"
        android:layout_above="@+id/idUraPricetka"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/idMesec"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/idLeto"
        android:layout_toStartOf="@+id/idLeto"
        android:textSize="20sp" />
</RelativeLayout>
